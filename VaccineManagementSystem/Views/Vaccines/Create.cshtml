@model VaccineManagementSystem.Models.Vaccine

@{
    ViewData["Title"] = "Add Vaccine";
}

<h1 class="text-primary">Add New Vaccine</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VaccineName" class="control-label">Vaccine Name</label>
                <input asp-for="VaccineName" class="form-control" />
                <span asp-validation-for="VaccineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DosesRequired" class="control-label">Doses Required</label>
                <select name="DosesRequired" id="DosesRequired" class="form-control">
                    <option value="0">Select</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
                <span asp-validation-for="DosesRequired" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="DaysBetween" class="control-label">Days Between Doses</label>
                <input asp-for="DaysBetween" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
