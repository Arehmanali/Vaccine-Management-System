@model VaccineManagementSystem.Models.Vaccine
@{
    ViewData["Title"] = "Add Doses";
}

<h1 class="text-primary">Add New Doses</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Vaccines" asp-action="AddDoses" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.VaccineName)
            <div class="form-group">
                <label asp-for="VaccineName" class="control-label">Vaccine Name</label>
                @Html.DropDownListFor(m => m.VaccineName, ViewBag.ListofVaccine as SelectList, new { @class = "form-control", @onChange = "SelectedValue(this)" })
                <span asp-validation-for="VaccineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalDoseRecieved" class="control-label">New Doses Recieved</label>
                <input asp-for="TotalDoseRecieved" class="form-control" />
                <span asp-validation-for="TotalDoseRecieved" class="text-danger"></span>
            </div>
            <input type="hidden" name="h1" value="" />
            <input type="hidden" name="h2" value="" />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    //To get selected value an text of dropdownlist
    function SelectedValue(ddlObject) {
        //Selected value of dropdownlist
        var selectedValue = ddlObject.value;
        //Selected text of dropdownlist
        var selectedText = ddlObject.options[ddlObject.selectedIndex].innerHTML;
        $("#Id").val(selectedValue)
        $("#VaccineName").val(selectedText)
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

